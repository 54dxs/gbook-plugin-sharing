{
  "name": "gbook-plugin-sharing",
  "description": "GBook网站分享插件",
  "main": "index.js",
  "version": "1.0.0",
  "dependencies": {
    "lodash": "^3.10.1"
  },
  "engines": {
    "gbook": ">=1.0.0"
  },
  "homepage": "https://github.com/54dxs/gbook-plugin-sharing",
  "repository": {
    "type": "git",
    "url": "https://github.com/54dxs/gbook-plugin-sharing.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/54dxs/gbook-plugin-sharing/issues"
  },
  "gbook": {
    "properties": {
      "facebook": {
        "type": "boolean",
        "default": true,
        "title": "Facebook"
      },
      "twitter": {
        "type": "boolean",
        "default": true,
        "title": "Twitter"
      },
      "google": {
        "type": "boolean",
        "default": false,
        "title": "Google"
      },
      "weibo": {
        "type": "boolean",
        "default": false,
        "description": "Weibo"
      },
      "instapaper": {
        "type": "boolean",
        "default": false,
        "description": "Instapaper"
      },
      "vk": {
        "type": "boolean",
        "default": false,
        "description": "VK"
      },
      "all": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "default": [
          "facebook",
          "google",
          "twitter",
          "weibo",
          "instapaper"
        ],
        "uniqueItems": true
      }
    }
  },
  "devDependencies": {
    "eslint": "^6.8.0"
  }
}
